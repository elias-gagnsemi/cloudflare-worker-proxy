{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "es2022",
    "types": ["@cloudflare/workers-types"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

